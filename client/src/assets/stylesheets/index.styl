
@import 'nib'
@import 'default'

.index_container
    overflow hidden
    .background_photo
        width 100%
        height 100%
        position absolute
        background url("/assets/images/background.jpg") no-repeat center center fixed
        background-size cover
        top 0
        left 0
        bottom 0
        right 0
        z-index -1
    h1
        width 100%
        text-align center
        relative top 25%
        font-size 70px
        font-weight normal
        color white
        text-shadow 0 1px 2px rgba(0, 0, 0, 0.74)
    center
        relative top 25%
        margin-top -30px
    .footer
        background rgba(222,241,246,0.1)
        width 100%
        height 220px
        absolute bottom 50px
        border-top solid 1px rgba(255,255,255,0.2)
        border-bottom solid 1px rgba(0,0,0,0.2)

        p
            font-size 20px

        ul 
            float right
            relative top 200px
            li
                display inline
                padding 10px
            a 
                color #def1f6