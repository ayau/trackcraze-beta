
@import 'nib'
@import 'default'


.program_name
    margin 25px 0px 10px 20px
    
    h2
        font-size 28px 
        text-shadow rgba(0,0,0,0.2) 1px 1px 1px
        font-weight normal

    input
        display none
        font-size 28px
        width 550px

    &.edit
        h2
            display none
        input
            display block


#split_holder
    article
        margin-top 20px

        .split_name
            margin 10px 0px 10px 20px
            
            p
                font-size 24px

            input
                display none
                font-size 24px
                width 300px
            &.edit
                p
                    display none
                input
                    display block

.new_split
    margin 20px
    display none
    .new_split_name
        font-size 24px
        width 300px
        margin-right 15px
        margin-bottom 10px
    .new_split_submit
        width 120px
        position relative
        top -3px
    &.edit
        display block

.new_exercise
    margin 20px
    .new_exercise_name
        font-size mainSize
        width 250px
        margin-bottom 20px

.workout_table
    margin-left 20px
    td
        vertical-align top
        padding 5px

.workout_exercise
    width 250px

.workout_set
    width 150px

.workout_comment
    color secondaryColor

#button_container
    background url("/assets/images/buttons_bg.png")
    z-index 3
    width 36px
    height 61px
    absolute: top 310px right 50%
    margin-right -476px

    &.fixed
        fixed: top 10px

    &.hidden
        display none

    .delete
        background url('/assets/images/delete.png')
        margin-left 2px
        height 31px
        width 31px
        &:hover
            cursor pointer
            background url("/assets/images/delete_hover.png")

    .edit
        margin-left 7px
        margin-top -1px 
        background url('/assets/images/edit.png')
        height 22px
        width 22px
        &:hover
            cursor pointer
            background url("/assets/images/edit_hover.png")
