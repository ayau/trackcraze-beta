html
    head
        //if lt IE 9
            script (src="../lib/html5shiv.js")
        title= title
        link(rel='stylesheet', href='/assets/stylesheets/app.css')
        meta(name='KEYWORDS', content='trackcraze,fitness,tracking,gym,workout,log,exercise,record,share')
        meta(name='Description', content="Trackcraze lets you follow other people's workout, record your own, and share it with others. Track your friends, your idol, and most importantly, yourself. Make fitness simple, customizable and motivating.")
        meta(charset="UTF-8")
    body
        header
            center(style='position:relative; top:10px')
                a(href='/programs')
                    h1 trackCraze
                    p BETA
                input#search(type='text', placeholder='Search trackCraze', autocomplete='off')
                a.logout(href='/logout') Log out
        #container
            nav#nav_left
                ul
                    li
                        a
                            img(src='/assets/images/profile.png')
                            label Profile
                    li
                        a
                            img(src='/assets/images/record.png')
                            label Record
                    li
                        a
                            img(src='/assets/images/diary.png')
                            label Diary
                    li
                        a
                            p Tracking: 45
                    li
                        a
                            p Tracked by: 52
                    li#new_program
                        a
                            img(src='/assets/images/addprogram.png')
                            label New Program
                            textarea#new_program_name(placeholder='program name', hidden)
                            <p id='new_program_submit' hidden>create</p>
            #content
                header
                    img.avatar(src='/assets/images/alex_pic.jpg')
                    section
                        h3 Alex
                        p CEO and Co-Founder of trackCraze. Casual gym goer
                        article
                            img(src='/assets/images/birthday.png', style='float:left; width:15px;position:relative; top:-3px; opacity:0.7')
                            p(style='float:left; margin-left:10px') 03/12/91
                !=body    
        script(type='text/template', id='nav_view').
            <li <% if(selected){ %> class='selected' <% } %> >
                <span class='star <% if(isMain){%>main_program<%}%>'></span>
                <a><p><%= program.name %></p></a>
            </li>

    //- third party plugin
    script(type='text/javascript', src='/assets/lib/jquery.min.js')
    //- script(type='text/javascript', src='http://code.jquery.com/jquery-1.8.0.js')
    script(type='text/javascript', src='/assets/lib/underscore.js')
    script(type='text/javascript', src='/assets/lib/backbone.js')

    //- namespace definition
    script(type='text/javascript', src='/scripts/app.js')

    //- utils
    script(type='text/javascript', src='/scripts/utils/nestCollection.js')

    //- models and collections (in order)
    script(type='text/javascript', src='/scripts/models/set.js')
    script(type='text/javascript', src='/scripts/collections/sets.js')
    script(type='text/javascript', src='/scripts/models/weight.js')
    script(type='text/javascript', src='/scripts/collections/weights.js')
    script(type='text/javascript', src='/scripts/models/split.js')
    script(type='text/javascript', src='/scripts/collections/splits.js')
    script(type='text/javascript', src='/scripts/models/program.js')
    script(type='text/javascript', src='/scripts/collections/programs.js')
    
    //- views
    script(type='text/javascript', src='/scripts/views/sets/show.js')
    script(type='text/javascript', src='/scripts/views/weights/show.js')
    script(type='text/javascript', src='/scripts/views/splits/show.js')
    script(type='text/javascript', src='/scripts/views/programs/show.js')
    script(type='text/javascript', src='/scripts/views/programs/list.js')

    //- App View and Router
    script(type='text/javascript', src='/scripts/appView.js')
