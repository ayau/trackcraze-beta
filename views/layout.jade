html
	head
		//if lt IE 9
			script (src="../lib/html5shiv.js")
		title= title
		//- link(rel='stylesheet', href='/css/style.css')
		link(rel='stylesheet', href='/assets/stylesheets/default.css')
		link(rel='stylesheet', href='/assets/stylesheets/app.css')
		meta(name='KEYWORDS', content='trackcraze,fitness,tracking,gym,workout,log,exercise,record,share')
		meta(name='Description', content="Trackcraze lets you follow other people's workout, record your own, and share it with others. Track your friends, your idol, and most importantly, yourself. Make fitness simple, customizable and motivating.")
		meta(charset="UTF-8")
	body
		header
			center(style='position:relative; top:10px')
				a(href='/program/')
					h1 trackCraze
					p BETA
				input#search(type='text', placeholder='Search trackCraze', autocomplete='off')
				a.logout(onclick='FB.logout()') Log out
		div#fb-root
		#container
			nav#nav_left
				ul
					li
						a
							img(src='/assets/images/profile.png')
							label Profile
					li
						a
							img(src='/assets/images/record.png')
							label Record
					li
						a
							img(src='/assets/images/diary.png')
							label Diary
					li
						a
							p Tracking: 45
					li
						a
							p Tracked by: 52
					li(pid='3', class='selected')
						span(class='star program_select')
						a
							p abc
					li(pid='3')
						span(class='star')
						a
							p abc
					li#new_program
						a
							img(src='/assets/images/addprogram.png')
							label New Program
							textarea#new_program_name(placeholder='program name', hidden)
							<p id='new_program_submit' hidden>create</p>
			#content
				header
					img.avatar(src='/assets/images/alex_pic.jpg')
					section
						h3 Alex
						p CEO and Co-Founder of trackCraze. Casual gym goer
						article
							img(src='/assets/images/birthday.png', style='float:left; width:15px;position:relative; top:-3px; opacity:0.7')
							p(style='float:left; margin-left:10px') 03/12/91
				!=body
		script(type='text/javascript', src='/scripts/app.js')		
		script(type='text/template', id='nav_view')
			li(pid='3', class='selected')
				span(class='star program_select')
				a
					p <%=name%>